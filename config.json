{
    "description": "Goofys plugin for Docker",
    "documentation": "https://github.com/haibin-fx/goofys-docker",
    "entrypoint": [
        "/usr/local/bin/goofys-docker"
    ],
    "env": [
        {
            "name": "DEBUG",
            "settable": [
                "value"
            ],
            "value": "0"
        },
        {
            "name": "http_proxy",
            "settable": [
                "value"
            ]
        },
        {
            "name": "https_proxy",
            "settable": [
                "value"
            ]
        },
        {
            "name": "no_proxy",
            "settable": [
                "value"
            ]
        },
        {
            "name": "AWS_ACCESS_KEY_ID",
            "settable": [
                "value"
            ]
        },
        {
            "name": "AWS_SECRET_ACCESS_KEY",
            "settable": [
                "value"
            ]
        }
    ],
    "interface": {
        "socket": "goofys.sock",
        "types": [
            "docker.volumedriver/1.0"
        ]
    },
    "linux": {
        "capabilities": [
            "CAP_SYS_ADMIN"
        ],
        "devices": [
            {
                "path": "/dev/fuse"
            }
        ]
    },
    "mounts": [
        {
            "destination": "/mnt/state",
            "options": [
                "rbind"
            ],
            "name": "state",
            "source": "/var/lib/docker/plugins/",
            "settable": [
                "source"
            ],
            "type": "bind"
        },
        {
            "destination": "/root/.aws",
            "options": [
                "rbind"
            ],
            "name": "aws_credential",
            "source": "",
            "settable": [
                "source"
            ],
            "type": "bind"
        },
        {
            "destination": "/mnt/cache",
            "options": [
                "rbind"
            ],
            "name": "cache",
            "source": "",
            "settable": [
                "source"
            ],
            "type": "bind"
        }
    ],
    "network": {
        "type": "host"
    },
    "propagatedmount": "/mnt/volumes"
}
